{
  "name": "imessage-mcp",
  "version": "3.0.0",
  "description": "MCP server for iMessage on macOS - read, search, and send messages via the Model Context Protocol",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "imessage-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "imessage",
    "apple-messages",
    "macos",
    "model-context-protocol",
    "ai",
    "claude"
  ],
  "author": "Thomas Vincent",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ]
}
